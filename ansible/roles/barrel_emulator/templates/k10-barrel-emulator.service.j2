[Unit]
Description=SwitchBot K10 Dock/Barrel Emulator (BlueZ)
After=bluetooth.service dbus.service
Requires=bluetooth.service

[Service]
Type=simple
ExecStart=/usr/bin/python3 /opt/switchbot-k10-barrel-emulator/run.py --config /etc/switchbot-k10-barrel-emulator/config.yml
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target

